<div class="wtn">
  <div class="texture"></div>
  <div class="splash">
    <div>
      <h1>Welcome to Nowhere</h1>
      <p>Aotearoa’s coolest little festival</p>
    </div>
    <div>
      <p class="right">February 5-6 <br /> Waitangi Weekend <br /> 2022</p>
    </div>
    <div class="star"></div>
    <div class="sawmill-bladee"></div>
    <div class="arch">
      <div id="wtn-video"></div>
    </div>
  </div>
  <div class="main">
    <div class="left">
      <p>Aotearoa’s coolest little festival, located in the rural Manawatu, featuring both leading and up-and-coming
        independent
        artists from around the country. Join us for 2.5 days of music and art, among a welcoming community.</p>
      <div class="img-sm-container">
        <div style="background-image: url(<%= @background_image %>)" class="image" alt="Eyegum Wednesdays at San Fran">
        </div>
      </div>
      <a href="https://events.humanitix.com/welcome-to-nowhere-2022/tickets?w=true&p=%236621c0">
        Buy Tickets and Merch
        <span class="arrow"></span>
      </a>
    </div>
    <div class="right">
      <div class="image" alt="Eyegum Wednesdays at San Fran">
      </div>
    </div>
  </div>
  <div class="lineup">
    <p>Lineup: Coming Soon</p>
  </div>
  <div class="faqs">
    <h3>FAQs</h3>
    <p class="toggle-accordions">Open/Close all</p>
    <% @faqs.each do |question| %>
      <div class="question">
        <div class="top">
          <p class='date'>
            <%= question['Question'] %>
          </p>
          <p class="large">
            <%= question['Question'] %>
          </p>
        </div>

        <div class="bottom">
          <div class="about">
            <p class="large">
              <%= question['Answer'].html_safe %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <div class="gallery">
    <h3>Gallery</h3>
    <div class="gallery-w2n-container">
      <% @gallery.each do |image| %>
        <a href="<%= image[:image_url] %>" title="<%= image[:name] %>"
          style="background-image: url(<%= image[:image_url] %>)">
        </a>
        <% end %>
    </div>
  </div>
  <script type="text/javascript" src="/javascripts/lib/lightbox.js"></script>
  <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
      new SimpleLightbox({ elements: '.gallery-w2n-container a' });
    })
  </script>
  <script async src="https://www.youtube.com/iframe_api"></script>
  <script type='text/javascript'>
    var player;
    var videoId = 'ZObnSXiV2_g';
    var startSeconds = 7;  // set your own video start time when loop play
    var endSeconds = 25;   // set your own video end time when loop play
    var playerConfig = {
      height: '120%',
      width: '120%',
      videoId: videoId,
      playerVars: {

        autoplay: 1,            // Auto-play the video on load
        controls: 0,            // Show pause/play buttons in player
        showinfo: 0,            // Hide the video title
        modestbranding: 1,      // Hide the Youtube Logo
        fs: 1,                  // Hide the full screen button
        cc_load_policy: 0,      // Hide closed captions
        iv_load_policy: 3,      // Hide the Video Annotations
        start: startSeconds,
        end: endSeconds,
        autohide: 0, // Hide video controls when playing
      },
      events: {
        'onStateChange': onStateChange,       // reference to Iframe API
        onReady: function (e) {              // mute the video when loaded
          e.target.mute();
        }
      }
    };
    //excute the video in div
    function onYouTubePlayerAPIReady() {

      player = new YT.Player('wtn-video', playerConfig);

    }
    //repload the video when onStateChange=YT.PlayerState.ENDED)
    function onStateChange(state) {
      if (state.data === YT.PlayerState.ENDED) {
        player.loadVideoById({
          videoId: videoId,
          startSeconds: startSeconds,
          endSeconds: endSeconds

        });
      }
    }

  </script>
</div>