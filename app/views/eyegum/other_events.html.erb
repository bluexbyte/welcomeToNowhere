<div class="eyegum wednesdays about-us other-events">
   <div class="coming-up" style="background-color: <%= @background_colour %>;">
    <h3>Great Sounds Great</h3>
    <% @other_events_content.each do |act| %>
      <div class="act">
        <div class="top open">
          <p class='date'>
            <%= act['Date'] %>
          </p>
          <p class="large">
            <%= act['Address'] %>
          </p>
        </div>

        <div class="bottom open">
          <div class="about">
            <p class="large">
              <%= act['Address'] %>
            </p>
            <p>
              <%= act['Insert short caption about event'].present? && act['Insert short caption about event'].html_safe %>
            </p>
            <p>
              <%= act['Buy tickets'].present? && act['Buy tickets'].html_safe %>

              <iframe id="iframe-container" src="https://events.humanitix.com/great-sounds-great-festival-2023/tickets?w=true&p=%23353337" width="100%" height="600px" frameborder="0"></iframe>
              <script>
                  var humanitix = {
                      findPos: function(obj) {
                          var curtop = 0;
                          if (obj.offsetParent) {
                          do {
                              curtop += obj.offsetTop;
                          } while ((obj = obj.offsetParent));
                          return [curtop];
                          }
                      }
                  };
                  window.addEventListener('message', function (e) {
                      if (e.origin !== "https://events.humanitix.com"){
                          return;
                      }
                      var messageData = e.data;
                      var iframeEl = document.getElementById('iframe-container');
                      if (iframeEl && messageData && !isNaN(messageData.scrollHeight)){
                          iframeEl.style.height = messageData.scrollHeight + 'px';
                      }
                      if (iframeEl && messageData && messageData.pageChange) {
                        window.scroll(0, humanitix.findPos(iframeEl));
                    }

                  }, false);</script>
            </p>
          </div>
          <% if Airtable.image(act, 'Poster' ) %>
            <img src="<%= Airtable.image(act, 'Poster') %>" />
            <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>