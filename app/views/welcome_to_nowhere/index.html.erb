<div id="cover"></div>
<div class="wtn">
  <div class="splash">
    <div class="heading">
      <h1 class="">WELCOME TO NOWHERE</h1>
    </div>
    <div class="arch"></div>
    <canvas height="1080" width="1920" id="background"></canvas>
  </div>
  <h2>ARTISTS</h2>
  <div class="container">
    <% @artists.each.with_index do |artist, index| %>
      <a href="/welcometonowhere/artists/<%= index %>">
        <div class="card" style="background-color: <%= @colours[index % 9] %>">
          <div class="img-container" style="background-image: url(<%= artist[:image_url] %>)"></div>
          <div class="text-container">
            <h3>
              <%= artist[:name] %>
            </h3>
            <p>
              <%= artist[:city] %>
            </p>
            <p>
              <%= artist[:genre] %>
            </p>
          </div>
        </div>
      </a>
      <% end %>
  </div>
</div>